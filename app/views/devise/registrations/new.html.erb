<div class="error-messages m-auto">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>

<main class="form-signin w-100 m-auto">
  <h2 class="h3 mb-3 fw-normal">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control first-input" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.text_field :user_name, placeholder: "User name", class: "form-control mid-input" %>
      <%= f.label :user_name %>
    </div>

    <div class="form-floating">
      <%= f.text_field :first_name, placeholder: "First name", class: "form-control mid-input" %>
      <%= f.label :first_name %>
    </div>

    <div class="form-floating">
      <%= f.text_field :last_name, placeholder: "Last name", class: "form-control mid-input" %>
      <%= f.label :last_name %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control mid-input" %>
      <%= f.label :password %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "form-control last-input" %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="mt-1 mb-3">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</main>
