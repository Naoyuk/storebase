<%= turbo_frame_tag mapping do %>
  <div class="row row-cols-4 py-2 border-top">
    <div class="col-3 my-auto">
      <%= mapping.ec_column %>
    </div>
    <div class="col-3 my-auto">
      <%= mapping.data_type %>
    </div>
    <div class="col-3 my-auto px-3">
      <%= mapping.user_column %>
    </div>
    <div class="col-3 my-auto">
      <%= link_to 'Edit', edit_feature_mapping_path(feature_id: mapping.version.feature_id, id: mapping.id), class: 'btn btn-sm btn-outline-primary' %>
    </div>
  </div>
<% end %>
