<div class="p-4">
  <%= form_with(model: feature, local: true) do |form| %>
    <% if feature.errors.any? %>
      <div class="row">
        <div id="error_explanation">
          <h2><%= pluralize(feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

          <ul>
          <% feature.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-3">
        <div class="form-group py-2">
          <%= form.label :service_id, class: 'form-label' %>
          <div class="custom-file">
            <%= form.grouped_collection_select(:service_id, Platform.all.order(:name), :services, :name, :id, :name, {}, {class: 'form-control'}) %>
          </div>
        </div>
      </div>

    <div class="form-group py-2">
      <%= form.submit %>
    </div>
  <% end %>
</div>
